@using Docron.UI.Api
@inherits LayoutComponentBase

<FluentDesignTheme Mode="DesignThemeModes.System"></FluentDesignTheme>

<FluentLayout>
    <FluentHeader>
        <img src="lg-w.svg" alt="" height="100%" style="margin-right: 10px"/>
        <FluentStack Orientation="Orientation.Horizontal" VerticalAlignment="VerticalAlignment.Center">
            <span>Docron</span>
            <FluentSpacer/>
            <span>Version: @_version</span>
        </FluentStack>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu/>
        <FluentBodyContent Class="body-content">
            <ErrorBoundary>
                <ChildContent>
                    <div class="content">
                        <FluentMessageBarProvider Section="MESSAGES_TOP"/>
                        @Body
                    </div>
                </ChildContent>
                <ErrorContent Context="ex">
                    <div class="blazor-error-boundary">@ex.Message</div>
                </ErrorContent>
            </ErrorBoundary>
        </FluentBodyContent>
    </FluentStack>
</FluentLayout>

@code
{
    private string _version = string.Empty;
    
    [Inject] IApiClient ApiClient { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        var result = await ApiClient.GetVersionAsync();

        _version = result.Content!.Trim('"');
    }
}